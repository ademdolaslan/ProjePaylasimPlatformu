@using ProjectSharing.BLL
@{
        var _p = new PageBLL().PagesWithFullDescription().OrderByDescending(x=>x.Page.PageViewCount).Take(5);
        Random rnd = new Random();
        foreach (var item in _p)
        {
        <div class="block-21 mb-4 d-flex">
            <a class="blog-img mr-4" style="background-image: url(images/image_@(rnd.Next(1, 12)).jpg);"></a>
            <div class="text">
                <h3 class="heading"><a href="#">@item.Page.PageTitle</a></h3>
                <div class="meta">
                    <div><a href="#"><span class="icon-calendar"></span>@item.Page.CreateDate.ToShortDateString()</a></div>
                    <div><a href="#"><span class="icon-person"></span>@item.User.FirstName @item.User.LastName</a></div>
                    <div><a href="#"><span class="icon-chat"></span>@item.Page.PageViewCount</a></div>
                </div>
            </div>
        </div>
    }
}
