@using ProjectSharing.BLL
@{
        var _p = new PageBLL().GetAllPages().OrderByDescending(x=>x.PageViewCount).Take(5);
        Random rnd = new Random();
        foreach (var item in _p)
        {
        <div class="block-21 mb-4 d-flex">
            <a class="blog-img mr-4"><img class="blog-img" src="@Url.Action("FileContent","Home",new { id=item.User.UserID})" /></a>
            <div class="text">
                <h3 class="heading"><a href="#">@item.PageTitle</a></h3>
                <div class="meta">
                    <div><a href="#"><span class="icon-calendar"></span>@item.CreateDate.ToShortDateString()</a></div>
                    <div><a href="#"><span class="icon-person"></span>@item.User.FirstName @item.User.LastName</a></div>
                    <div><a href="#"><span class="icon-chat"></span>@item.PageViewCount</a></div>
                </div>
            </div>
        </div>
    }
}
